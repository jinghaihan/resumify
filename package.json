{
  "name": "resumify",
  "type": "module",
  "version": "0.0.0.alpha.0",
  "description": "Block-based resume builder with AI and PDF export.",
  "author": "jinghaihan",
  "license": "MIT",
  "homepage": "https://github.com/jinghaihan/resumify#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jinghaihan/resumify.git"
  },
  "bugs": {
    "url": "https://github.com/jinghaihan/resumify/issues"
  },
  "scripts": {
    "start": "next start",
    "dev": "next dev",
    "build": "next build",
    "deps": "taze major -I",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "ui": "pnpm -F @resumify/shadcn add",
    "ui:ai": "pnpm -F @resumify/shadcn add:ai",
    "db:generate": "pnpm -F @resumify/database generate",
    "db:migrate": "pnpm -F @resumify/database migrate",
    "db:studio": "pnpm -F @resumify/database studio",
    "release": "bumpp",
    "prepare": "simple-git-hooks",
    "postinstall": "tsx ./scripts/postinstall.ts"
  },
  "dependencies": {
    "@ai-sdk/react": "catalog:ai",
    "ai": "catalog:ai",
    "qrcode.react": "catalog:frontend",
    "react": "catalog:frontend",
    "react-dom": "catalog:frontend",
    "sonner": "catalog:frontend",
    "tw-animate-css": "catalog:frontend",
    "@iconify/react": "catalog:icons",
    "lucide-react": "catalog:icons",
    "@better-auth/ui": "catalog:prod",
    "@sparticuz/chromium-min": "catalog:prod",
    "date-fns": "catalog:prod",
    "lz-string": "catalog:prod",
    "nanoid": "catalog:prod",
    "next": "catalog:prod",
    "next-intl": "catalog:prod",
    "next-themes": "catalog:prod",
    "puppeteer-core": "catalog:prod",
    "@resumify/ai": "workspace:*",
    "@resumify/api": "workspace:*",
    "@resumify/auth": "workspace:*",
    "@resumify/chatbot": "workspace:*",
    "@resumify/database": "workspace:*",
    "@resumify/i18n": "workspace:*",
    "@resumify/shadcn": "workspace:*",
    "@resumify/shared": "workspace:*",
    "@resumify/store": "workspace:*",
    "@resumify/themes": "workspace:*",
    "@resumify/ui": "workspace:*"
  },
  "devDependencies": {
    "@sparticuz/chromium": "catalog:dev",
    "autoprefixer": "catalog:dev",
    "bumpp": "catalog:dev",
    "pncat": "catalog:dev",
    "shadcn": "catalog:dev",
    "simple-git-hooks": "catalog:dev",
    "taze": "catalog:dev",
    "tsx": "catalog:dev",
    "typescript": "catalog:dev",
    "@tailwindcss/postcss": "catalog:frontend",
    "tailwindcss": "catalog:frontend",
    "@eslint-react/eslint-plugin": "catalog:lint",
    "@octohash/eslint-config": "catalog:lint",
    "eslint": "catalog:lint",
    "eslint-config-hyoban": "catalog:lint",
    "eslint-config-next": "catalog:lint",
    "eslint-plugin-better-tailwindcss": "catalog:lint",
    "eslint-plugin-format": "catalog:lint",
    "lint-staged": "catalog:lint",
    "vitest": "catalog:test",
    "@types/node": "catalog:types",
    "@types/react": "catalog:types",
    "@types/react-dom": "catalog:types"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
